{
  "name": "@graphql-mocks/sinon",
  "version": "0.0.0",
  "author": "Chad Carbert",
  "description": "Mock using graphql-mocks with sinon spy",
  "type": "commonjs",
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "unpkg": "dist/bundles/graphql-mocks-sinon.umd.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"./src/**/*.ts\" \"./test/**/*.ts\"",
    "pretest": "tsc --noEmit && yarn lint",
    "test": "TS_NODE_PROJECT=\"./test/tsconfig.json\" mocha -r ts-node/register \"./test/**/*.test.ts\"",
    "clean": "rimraf ./dist",
    "copy-pjson": "node scripts/copy-scrubbed-pjson",
    "build": "yarn clean && rollup -c rollup.config.js && yarn copy-pjson",
    "watch": "rollup --watch -c rollup-watch.config.js"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "devDependencies": {
    "@types/sinon": "^9.0.0",
    "graphql": "^14",
    "graphql-mocks": "^0.6.0",
    "sinon": "^9.0.0"
  },
  "peerDependencies": {
    "graphql": "^14.0.0 || ^15.0.0",
    "graphql-mocks": "^0.5.0",
    "sinon": "^9.0.0"
  }
}
